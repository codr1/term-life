{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./",
    "typeRoots": ["./node_modules/@types", "./generated"] // Include generated types
  },
  "include": ["src/**/*", "generated/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
